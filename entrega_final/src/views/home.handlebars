<main>
    <div class="container py-4">
        <h2 class="text-center mb-4">Productos Disponibles</h2>
        
        <div class="row">
            {{#each productAll.payload}}
                <div class="col-sm-3 mb-3">
                    <div class="card h-100 shadow-sm">
                        <img src="{{this.thumbnail}}" class="card-img-top p-4" alt="{{this.title}}" style="height: 300px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text"><strong>Precio:</strong> ${{this.price}}</p>
                            <a href="/products/{{this._id}}" class="btn btn-primary w-100">Detalles</a>                            
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>

        <nav>
            <ul class="pagination justify-content-center mt-4">
                {{#if productAll.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{productAll.prevPage}}" aria-label="Anterior">
                            <span aria-hidden="true">&laquo; Anterior</span>
                        </a>
                    </li>
                {{/if}}
                
                <li class="page-item active">
                    <span class="page-link">PÃ¡gina {{productAll.page}} de {{productAll.totalPages}}</span>
                </li>
                
                {{#if productAll.hasNextPage}}
                    <li class="page-item">
                        <a class="page-link" href="?page={{productAll.nextPage}}" aria-label="Siguiente">
                            <span aria-hidden="true">Siguiente &raquo;</span>
                        </a>
                    </li>
                {{/if}}
            </ul>
        </nav>
    </div>
</main>
